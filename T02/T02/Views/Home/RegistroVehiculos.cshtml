@model T02.Models.VehiculoModel

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card bg-gradient-info card-img-holder text-white">
            <div class="card-body">
                <img src="~/Template/image/circle.svg" class="card-img-absolute" alt="circle-image" />
                <h4 class="card-title text-center text-white">Registro Vehículos</h4>

                @using (Html.BeginForm("RegistroVehiculos", "Home", FormMethod.Post, new { @id = "FormRegistroVe" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Marca</label>
                        @Html.TextBoxFor(m => m.Marca, new { @placeholder = "Marca", @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Modelo</label>
                        @Html.TextBoxFor(m => m.Modelo, new { @placeholder = "Modelo", @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Color</label>
                        @Html.TextBoxFor(m => m.Color, new { @placeholder = "Color", @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Precio</label>
                        @Html.TextBoxFor(m => m.Precio, new { @placeholder = "Precio", @class = "form-control", type = "number", step = "0.01" })
                    </div>

                    <div class="form-group">
                        <label>Vendedor</label>
                        @Html.DropDownListFor(m => m.IdVendedor, Model.ListaVendedores, "Seleccione un vendedor", new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-gradient-danger btn-rounded btn-fw me-2">
                        Procesar
                    </button>
                }
            </div>
        </div>
    </div>
</div>
<script src="~/Template/js/funciones/registroVehiculo.js"></script>