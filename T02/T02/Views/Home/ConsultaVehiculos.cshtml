@model List<T02.Models.VehiculoConsultaModel>

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <a href="@Url.Action("Index", "Home")"
               class="btn btn-gradient-danger btn-rounded btn-fw">
                <i class="mdi mdi-arrow-left"></i>
                Ir al Inicio
            </a>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card bg-gradient-success card-img-holder">
                    <div class="card-body">
                        <img src="~/Template/image/circle.svg" class="card-img-absolute" alt="circle-image" />

                        <h4 class="card-title text-center">
                            Consulta de vehículos
                        </h4>

                        <table class="table text-center">
                            <thead>
                                <tr>
                                    <th>Marca</th>
                                    <th>Modelo</th>
                                    <th>Color</th>
                                    <th>Precio</th>
                                    <th>Vendedor</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Marca</td>
                                        <td>@item.Modelo</td>
                                        <td>@item.Color</td>
                                        <td>@item.Precio</td>
                                        <td>@item.Vendedor</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
